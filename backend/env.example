# 服务配置
APP_NAME=Oblivious
APP_ENV=development
APP_PORT=8080
GIN_MODE=debug

# 数据库配置
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=password
DATABASE_NAME=oblivious
DATABASE_SSLMODE=disable
DATABASE_MAX_OPEN_CONNS=100
DATABASE_MAX_IDLE_CONNS=10

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10

# JWT 配置
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRE_HOURS=2
REFRESH_TOKEN_EXPIRE_DAYS=7

# 限流配置
RATE_LIMIT_ENABLED=true
RATE_LIMIT_RPS=1000
RATE_LIMIT_BURST=2000

# RabbitMQ 配置
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
RABBITMQ_EXCHANGE=oblivious_exchange
RABBITMQ_QUEUE_PREFIX=oblivious

# MinIO 配置
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=oblivious
MINIO_USE_SSL=false

# 监控配置
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
PROMETHEUS_PORT=9090
ENABLE_METRICS=true
ENABLE_TRACING=true

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout

# 其他服务地址（用于服务间调用）
USER_SERVICE_URL=http://localhost:8081
CHAT_SERVICE_URL=http://localhost:8082
RELAY_SERVICE_URL=http://localhost:8083
AGENT_SERVICE_URL=http://localhost:8084
RAG_SERVICE_URL=http://localhost:8085
FILE_SERVICE_URL=http://localhost:8086
PLUGIN_SERVICE_URL=http://localhost:8087
BILLING_SERVICE_URL=http://localhost:8088

# 业务配置
DEFAULT_USER_QUOTA=5000  # 新用户默认额度（分）
ENABLE_REGISTRATION=true
ENABLE_INVITE_SYSTEM=true
MAX_MESSAGE_LENGTH=10000
FILE_UPLOAD_MAX_SIZE=20971520  # 20MB

# CORS 配置
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Authorization,Content-Type,X-Request-ID
CORS_MAX_AGE=86400

